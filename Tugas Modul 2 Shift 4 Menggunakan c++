    cout<<"\nJumlah Tiket  : "<<jumlah_tiket<<endl;
    total = (harga_tiket+biaya_tambahan)*jumlah_tiket;
    if (jumlah_tiket >= 3){
        diskon = total*0.25;
    }else {
        diskon = 0;
        }
    jumlah_bayar = total-diskon;
